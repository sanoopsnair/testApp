<%= form_tag main_app.create_session_path, :role=>"form", id: "form_sign_in", class: "m-30" do %>

  <%= hidden_field_tag :customer_app, params[:customer_app] if params[:customer_app] %>
  <%= hidden_field_tag :redirect_back_url, params[:redirect_back_url] if params[:redirect_back_url] %>

  <div class="form-group mt-10">
    <label for="sign_in_email">Email / Username</label>
    <%= text_field_tag :email, params[:login_handle], :placeholder=> "Email", :name => "login_handle", :class=>"form-control"%>
  </div>

  <div class="form-group">
    <label for="sign_in_password">Password</label>
    <%= password_field_tag :password, '', :placeholder=> "Password", :name => "password", :class=>"form-control"%>
  </div>
<div><%= link_to 'Forgot password?', forgot_password_form_path %>
  <%= submit_tag "Sign In", :class => "btn btn-primary pull-right" %>
  </div>
  <div class="cl-10"></div>

<% end %>


