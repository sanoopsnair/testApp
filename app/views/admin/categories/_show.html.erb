<div class="m-30"> 
	<div class="table-responsive"> 

		<% status_hash = {published: "success", unpublished: "default", removed: "danger"} %>

		<div class="media p-5 <%= status_hash[@category.status.to_sym] %>" style="margin-bottom:40px;">

		  <div class="pull-left" style="width:30%;">
      	<%= edit_image(@category, "category_image.image.large.url", upload_image_link(@category, :category_image), size: :large) %>
	    </div>

	    <div class="pull-left ml-10" style="width:65%;">
		    
		    <%= theme_panel_heading(@category.name) %>
        <%= theme_panel_sub_heading(@category.one_liner, "#") %>
		    
		    <span class="ml-5 mt-5 label label-<%= status_hash[@category.status.to_sym] %>"><%= @category.status.titleize %></span>
		    
		    <% if @category.featured %>
		      <span class="ml-5 mt-5 label label-warning">Featured</span>
		    <% end %>

		    <%= clear_tag(10) %>
		    <div><%= raw @category.description %></div>
		  </div>

		</div>


		<h4 class="mb-20">Technical Details</h4>

		<table class="table table-striped table-condensed table-bordered mb-60"> 
			<tbody>
				
				<tr>
					<th>Parent</th><td><%= @category.parent.name if @category.parent %></td>
					<th>Top Parent</th><td><%= @category.top_parent.name if @category.top_parent %></td>
				</tr>

				<tr>
					<th>Created At</th><td><%= @category.created_at.strftime("%m/%d/%Y - %H:%M:%S") if @category.created_at %></td>
					<th>Updated At</th><td><%= @category.updated_at.strftime("%m/%d/%Y - %H:%M:%S") if @category.updated_at %></td>
				</tr>
				
			</tbody>
		</table>

		<% 
			edit_link = edit_admin_category_url(id: @category.id)
			delete_link = admin_category_url(id: @category.id) 
		%>
		
		<%= link_to "Close", "#", onclick: "closeModal();", class: "btn btn-default pull-right" %>
		
	</div>
</div>