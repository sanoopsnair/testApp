<div class="m-30"> 
	<div class="table-responsive"> 

		<% status_hash = {published: "success", unpublished: "default", removed: "danger"} %>

		<div class="media p-5 <%= status_hash[@brand.status.to_sym] %>" style="margin-bottom:40px;">

		  <div class="pull-left" style="width:30%;">
      	<%= edit_image(@brand, "brand_image.image.large.url", upload_image_link(@brand, :brand_image), size: :large) %>
	    </div>

	    <div class="pull-left ml-10" style="width:65%;">
		    
		    <%= theme_panel_heading(@brand.name) %>
        <%#= theme_panel_sub_heading(@brand.name, "#") %>
		    
		    <span class="ml-5 mt-5 label label-<%= status_hash[@brand.status.to_sym] %>"><%= @brand.status.titleize %></span>
		    
		    <% if @brand.featured %>
		      <span class="ml-5 mt-5 label label-warning">Featured</span>
		    <% end %>

		    <%= clear_tag %>
		  </div>

		</div>


		<h4 class="mb-20">Technical Details</h4>

		<table class="table table-striped table-condensed table-bordered mb-60"> 
			<tbody>
				
				<tr>
					<th>Created At</th><td><%= @brand.created_at.strftime("%m/%d/%Y - %H:%M:%S") if @brand.created_at %></td>
					<th>Updated At</th><td><%= @brand.updated_at.strftime("%m/%d/%Y - %H:%M:%S") if @brand.updated_at %></td>
				</tr>
				
			</tbody>
		</table>

		<% 
			edit_link = edit_admin_brand_url(id: @brand.id)
			delete_link = admin_brand_url(id: @brand.id) 
		%>
		
		<%= link_to "Close", "#", onclick: "closeModal();", class: "btn btn-default pull-right" %>
		
	</div>
</div>